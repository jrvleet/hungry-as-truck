</head>
<header>
  <%- include('../partials/header') %>
</header>
<body>
  <h1>Welcome to Hungry as Truck</h1>


  <main class="container-fluid">
  <% if (user === undefined) { %>

    
  <p class="iAm"><strong>I am a...</strong></p>
  <div class="row">
    <a class="btn btn-primary col-md-4" href="/hp/facebook">Hungry Person</a>
    <a class="btn btn-primary col-md-4" href="/to/facebook">Truck Owner</a>
  </div>
  

   <% } %>

  </main>

  <% if (user !== undefined) { %>
    <% if (user.trucks) { %>
      <select name="select">
